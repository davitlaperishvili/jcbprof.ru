<div class="box">
  <div class="box-heading">{{ heading_title }}</div>
    <div class="box-content">
        <div class="box-product  productbox-grid" id=" latest-grid">
        {% for product in products %}
          <div class="product-items">
            <div class="product-block product-thumb transition">
              <div class="product-block-inner">	  	
                <div class="image">
                  <a href="{{ product.href }}">
                    <button class="wishlist" type="button" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
                    <img src="{{ product.thumb }}" title="{{ product.name }}" alt="{{ product.name }}" class="img-responsive reg-image">
                    <div class="image_content"><img class="img-responsive hover-image" src="{{ product.thumb }}" title="{{ product.name }}" alt="{{ product.name }}"></div>
                  </a>
                </div>
                <div class="product-details">
                  <div class="caption">
                    <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                    <p class="price">
                      {{product.price}}
                    </p>
                  </div>		
                  
                  <div class="product_hover_block">
                    <div class="action">
                      <button type="button" class="cart_button" onclick="cart.add('{{ product.product_id }}');" title="Купить"><i class="fa fa-shopping-cart" area-hidden="true"></i> </button>
                    <div class="quickview-button">
                      <a class="quickbox" title="" href=""><i class="fa fa-eye"></i></a>
                    </div>
                    <button class="wishlist" type="button" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
                    <button class="compare_button" type="button" title="Добавить к сравнению " onclick="compare.add('{{ product.product_id }}');"><i class="fa fa-exchange"></i></button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}

      </div>
    </div>
  </div>
</div>


